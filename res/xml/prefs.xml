<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  	<CheckBoxPreference android:title="@string/prefs_title_outgoing_call"
  		android:key="@string/prefs_key_outgoing_call"
  		android:defaultValue="false"
  		android:summaryOn="@string/on"
  		android:summaryOff="@string/off"/>
  	
  	<CheckBoxPreference android:title="@string/prefs_title_incoming_call"
  		android:key="@string/prefs_key_incoming_call"
  		android:defaultValue="false"
  		android:summaryOn="@string/on"
  		android:summaryOff="@string/off"/>
  	
  	<CheckBoxPreference android:title="@string/prefs_title_end_call"
  		android:key="@string/prefs_key_end_call"
  		android:defaultValue="false"
  		android:summaryOn="@string/on"
  		android:summaryOff="@string/off"/>
  	<PreferenceCategory android:title="@string/prefs_category_reminder_settings">
  		
  	<CheckBoxPreference android:title="@string/prefs_title_reminder"
  		android:key="@string/prefs_key_reminder"
  		android:defaultValue="false"
  		android:summaryOn="@string/on"
  		android:summaryOff="@string/off"/>
  	 <ListPreference android:key="@string/prefs_key_reminder_interval"
		android:title="@string/prefs_title_reminder_interval"
		android:dialogTitle="@string/prefs_title_reminder_interval"
		android:entries="@array/vibrate_interval_entries"
		android:entryValues="@array/vibrate_interval_entry_values"
		android:defaultValue="45"
		android:dependency="@string/prefs_key_reminder"/>
	</PreferenceCategory>
	

  	<PreferenceCategory android:title="@string/prefs_category_general_settings">
  		<ListPreference android:title="@string/prefs_title_vibrate_time"
			android:key="@string/prefs_key_vibrate_time"
			android:defaultValue="80"
			android:entries="@array/vibrate_time_entries"
			android:entryValues="@array/vibrate_time_entry_values"/>
		
  		<CheckBoxPreference android:title="@string/prefs_title_auto_start"
  			android:key="@string/prefs_key_auto_start"
  			android:defaultValue="false"
  			android:summaryOn="@string/on"
  			android:summaryOff="@string/off"/>
  			
  		<CheckBoxPreference android:title="@string/prefs_title_show_notification"
  			android:key="@string/prefs_key_show_notification"
  			android:defaultValue="false"
  			android:summaryOn="@string/on"
  			android:summaryOff="@string/off"/>
  	</PreferenceCategory>
  	
  	<PreferenceCategory android:title="@string/prefs_category_info">
  		<Preference android:key="@string/prefs_key_about" 
  			android:title="@string/prefs_title_about"
  			android:persistent="false"/>
  		<Preference android:title="@string/prefs_title_donate_author"
  			android:persistent="false"
  			android:summary="@string/prefs_summary_donate_author"/>
  	</PreferenceCategory>
</PreferenceScreen>
