  	<PreferenceCategory android:title="@string/prefs_category_general_settings">
  		
  		<CheckBoxPreference android:title="@string/prefs_title_auto_start"
  			android:key="@string/prefs_key_auto_start"
  			android:defaultValue="false"
  			android:summaryOn="@string/on"
  			android:summaryOff="@string/off"/>
  			
  		<CheckBoxPreference android:title="@string/prefs_title_show_notification"
  			android:key="@string/prefs_key_show_notification"
  			android:defaultValue="false"
  			android:summaryOn="@string/on"
  			android:summaryOff="@string/off"/>
  	</PreferenceCategory>
  	
  	<PreferenceCategory android:title="@string/prefs_category_info">
  		<Preference android:key="@string/prefs_key_about" 
  			android:title="@string/prefs_title_about"
  			android:persistent="false"/>
  		<Preference android:title="@string/prefs_title_donate_author"
