  		 	android:entryValues="@array/vibrate_mode_entry_values"
  		 	android:defaultValue="0"
  		 	android:dependency="@string/prefs_key_incoming_call"/>
  	</PreferenceCategory>
  	
  	
  	<PreferenceCategory android:title="@string/prefs_category_end_call_settings">
  		<CheckBoxPreference android:title="@string/prefs_title_end_call"
  			android:key="@string/prefs_key_end_call"
  			android:defaultValue="false"
  			android:summaryOn="@string/on"
  			android:summaryOff="@string/off"/>
  		<ListPreference android:title="@string/prefs_title_vibrate_mode"
  		 	android:key="@string/prefs_key_end_call_vibrate_mode"
  		 	android:dialogTitle="@string/prefs_title_vibrate_mode"
  		 	android:entries="@array/vibrate_mode_entries"
  		 	android:entryValues="@array/vibrate_mode_entry_values"
  		 	android:defaultValue="0"
  		 	android:dependency="@string/prefs_key_end_call"/>
  	</PreferenceCategory>
  	
